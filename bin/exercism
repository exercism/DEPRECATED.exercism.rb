#!/usr/bin/env ruby

trap("INT") { print "\nExiting. \n"; exit }
$:.unshift File.expand_path("../../lib", __FILE__)
require 'cli'

begin
  Exercism::CLI.start
rescue StandardError => e
  puts
  puts "ERROR: Something went wrong. Exiting."
  puts e.message
  puts
  raise e if ENV['EXERCISM_ENV'] =~ /test|development/
end
